open solid


let base_table (props : mut solid_props) =
    table
        fun props' => {props' with
            Display = Some "flex"
            Flex = Some "1"
            FlexDirection = Some "column"
            OverflowX = Some "hidden"
            OverflowY = Some <| props.OverflowY /?? "hidden"
        }
        fun () => ;[
            tbody
                fun props' => {props' with
                    Display = Some "flex"
                    FlexDirection = Some "column"
                    BackgroundColor = Some "$blackAlpha3"
                    Margin = Some "-1px"
                }
                (props.Children /?? fun () => ;[])
        ]
