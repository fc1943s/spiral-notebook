open solid
open state
open base_table
open row
open state_input


let chain_accounts (props : mut solid_props) =
    inl chain_accounts, set_chain_accounts = use_chain_accounts ()

    /!!!base_table
        id
        fun () => ;[
            for' {
                Each' = chain_accounts ()
            } fun account _index => ;[
                /!!row {
                    OnLoad = None
                    OnUnload = None
                    Status = CheckHidden
                    Props = fun props' => { props' with
                        Title =
                            match get_atom_value account.account with
                            | Admin => "admin"
                            | Player (X) => "x"
                            | Player (O) => "o"
                            |> str |> Some
                        Children = Some fun () => ;[
                            /!!!base_table
                                id
                                fun () => ;[
                                    /!!row {
                                        OnLoad = None
                                        OnUnload = None
                                        Status = CheckHidden
                                        Props = fun props' => { props' with
                                            Padding = Some "3px"
                                            Title = Some <| str "Address"
                                            Children = Some fun () => ;[
                                                /!!state_input {
                                                    StateGet = fun () =>
                                                        account.address |> get_atom_value |> Some
                                                    StateSet = fun value =>
                                                        account.address |> set_atom_value (value /?? "")
                                                }
                                            ]
                                        }
                                    }
                                    /!!row {
                                        OnLoad = None
                                        OnUnload = None
                                        Status = CheckHidden
                                        Props = fun props' => { props' with
                                            Padding = Some "3px"
                                            Title = Some <| str "Private Key"
                                            Children = Some fun () => ;[
                                                /!!state_input {
                                                    StateGet = fun () =>
                                                        account.private_key |> get_atom_value |> Some
                                                    StateSet = fun value =>
                                                        account.private_key |> set_atom_value (value /?? "")
                                                }
                                            ]
                                        }
                                    }
                                ]
                        ]
                    }
                }
            ]
        ]
